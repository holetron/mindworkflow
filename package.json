{
  "name": "local-creative-flow",
  "version": "0.1.0",
  "private": true,
  "description": "Local offline-first creative flow tool",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm --prefix server run dev\" \"npm --prefix app run dev\"",
    "build": "npm --prefix server run build && npm --prefix app run build",
    "test": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
