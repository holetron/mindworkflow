{
  "name": "local-creative-flow-server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "pkg": "pkg dist/index.js --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path ../releases",
    "package": "npm run build && npm run pkg"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.19.2",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/knex": "^0.16.1",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.7",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "assets": [
      "../app/dist/**/*",
      "src/schemas/**/*",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ],
    "scripts": "dist/**/*.js"
  }
}
