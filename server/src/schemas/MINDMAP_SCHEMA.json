{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MINDMAP_SCHEMA",
  "type": "object",
  "required": ["nodes"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/mindmap_node"
      },
      "minItems": 1
    }
  },
  "$defs": {
    "mindmap_node": {
      "type": "object",
      "required": ["type", "title"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text", "ai", "ai_improved", "parser", "python", "image", "video", "audio", "html", "file", "json", "markdown", "transformer"]
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "content": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "meta": {
          "type": "object",
          "additionalProperties": true
        },
        "ai": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "model": { "type": "string" },
            "system_prompt": { "type": "string" },
            "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
            "output_example": { "type": "string" },
            "response_type": { 
              "type": "string",
              "enum": ["single", "tree", "folder"]
            }
          },
          "additionalProperties": true
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/mindmap_node"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}