{
  "name": "mindworkflow",
  "version": "0.6.6",
  "private": true,
  "description": "Local offline-first creative flow tool",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "dev": "bash ./dev.sh",
    "build": "npm --prefix server run build && npm --prefix app run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p server/tsconfig.json && tsc --noEmit -p app/tsconfig.json",
    "quality": "bash scripts/count-any.sh"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
